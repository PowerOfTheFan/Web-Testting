@using MyPham.Models
@using PagedList.Mvc
@model PagedList.PagedList<SanPham>
@{
    ViewBag.Title = "Sản phẩm theo thương hiệu";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="center_content">
    <h2 style="text-align:center; color:red">Sản phẩm theo thương hiệu</h2>
    @foreach (var s in Model)
    {
        <div class="prod_box">
            <div class="center_prod_box">
                <div class="product_title">
                    <div class="product_title">
                        <a href="@Url.Action("Details","MyPham",new { id= s.MaSP})">@s.TenSP</a>
                    </div>
                </div>

                <div class="product_img">
                    <a href="@Url.Action("Details","MyPham",new { id= s.MaSP})">
                        <img src="~/Images/@s.HinhAnh" width="100" height="100" border="0" />
                    </a>
                </div>

                <div class="prod_price">
                    <span class="price">@String.Format("{0:0,0}", s.GiaBan) VND</span>
                </div>
                <div class="fb-like" data-href="http://storeoftrung.somee.com/MyPham/@s.MaSP" data-layout="button_count" data-action="like" data-size="small" data-show-faces="false" data-share="true"></div>

            </div>
            <div class="prod_details_tab">
                <a href="@Url.Action("Themgiohang", "Giohang", new { @idSp = s.MaSP, @strUrl=Request.Url.ToString()})" class="prod_buy">Add to Cart</a>
                <a href="@Url.Action("Details","MyPham",new { id= s.MaSP})" class="prod_details">Details</a>
            </div>
        </div>
    }

</div>

<h4 style="text-align:center; color:blue">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;</h4>
<div class="MenuTrang"> @Html.PagedListPager(Model, page => Url.Action("SpTheoNSX", new { page = page })) </div>
<style>
    .MenuTrang li {
        display: inline;
        font-style: normal;
        font-size: 20px;
        border: ridge;
    }
</style>

