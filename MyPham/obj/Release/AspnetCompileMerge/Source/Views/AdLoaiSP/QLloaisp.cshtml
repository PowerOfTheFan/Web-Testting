@model IEnumerable<MyPham.Models.LoaiSP>

@{
    ViewBag.Title = "QLloaisp";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Quản lí loại sản phẩm</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>MaLoai</th>
        <th>
            @Html.DisplayNameFor(model => model.TenLoai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.MaLoai)</td>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoai)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.MaLoai})
        </td>
    </tr>
}

</table>
